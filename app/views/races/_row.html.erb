<tr id="race_row_<%= race.id %>">
  <td>
    <%= race.name %>
  </td>
  <td>
    <div class="form-check">
      <section class="slider-checkbox">
        <!--        <input type="checkbox"<%#= ' checked=1' if race.active? %>>-->
        <%= check_box_tag 'active', race.id, race.active?,
                          data: {
                              remote: true,
                              url: toggle_race_path(race.id),
                              method: 'POST'
                          } %>
        <label class="label"></label>
      </section>
    </div>
  </td>
  <td>
    <div class="form-check">
      <%= link_to 'Edit', edit_race_path(race), remote: true, class: "btn btn-outline-primary" %>
    </div>
  </td>
</tr>