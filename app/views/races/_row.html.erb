<tr id="race_row_<%= race.id %>" class="slideInRight" data-behavior="filterable">
  <td data-behavior="searchable">
    <%= race.name %>
  </td>
  <td>
    <div class="form-check">
      <section class="slider-checkbox">
        <%= check_box_tag "active_#{race.id}", race.id, race.active?,
                          disabled: race.locked? ? true : false,
                          title: race.locked? ? 'In use' : '',
                          data: {
                              remote: true,
                              url: toggle_race_path(race.id),
                              method: 'POST'
                          } %>
        <label class="label" for="active_<%= race.id %>" title="<%= race.locked? ? 'In use' : '' %>"></label>
      </section>
    </div>
  </td>
  <td>
    <div class="form-check">
      <%= link_to 'Edit', edit_race_path(race), remote: true, class: "btn btn-outline-primary" %>
    </div>
  </td>
</tr>