<div class="card-columns">
  <% tournaments.each do |tournament| %>
    <div class="card card-<%= theme %> card-outline">
      <div class="card-header">
        <h5 class="m-0">
          <%= tournament.name %>
          <% if tournament.owner == current_user %>
            <%= link_to '', edit_tournament_path(tournament), class: 'fa fa-cog pull-right pale' %>
          <% end %>
        </h5>

      </div>
      <div class="card-body">
        <h6 class="card-title"><%= tournament.start_date %></h6>

        <p class="card-text"><%= tournament.desc %></p>
        <%= link_to 'Select', tournament_teams_path(tournament), class: "btn btn-#{theme}" %>
      </div>
    </div>
  <% end %>
</div>