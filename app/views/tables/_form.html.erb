<%= render 'shared/errors', obj: @table %>
<div class="container">
  <%= form_for @table, remote: true, html: { class: "row" } do |f| %>
    <% f.fields_for :scores do |ff| %>
      <div class="form col-lg-4 offset-lg-1
                  col-md-6 offset-md-0
                  col-sm-8 offset-sm-2
                  col-xs-10 offset-xs-1">
              <h3><%= Score.find(ff.object.id).team.name %></h3>
        <%= ff.label :td, 'Touchdowns' %>
        <%= ff.number_field :td,
                            in: 0.0..32.0,
                            step: 1,
                            required: true,
                            class: "form-control number" %>
        <%= ff.label :cas, 'Casualties' %>
        <%= ff.number_field :cas,
                            in: 0.0..32.0,
                            step: 1,
                            required: true,
                            class: "form-control number" %>
        <%= ff.label :concede, 'Conceded?' %>
        <section class="slider-checkbox">
          <%= ff.check_box :concede, class: "form-control" %>
          <label class="label"></label>
        </section>
      </div>
    <% end %>
  <% end %>
</div>
