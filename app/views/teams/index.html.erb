<div class="page-header m-3">
  <h1>Teams</h1><%= link_to 'Add team...', new_tournament_team_path, remote: true, class: "btn btn-primary" %>
</div>
<div class="table-responsive-lg m-xl-4 m-lg-4 m-sm-1 m-xs-1">
  <table class="table table-sm" id="teams-list">
    <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Race</th>
      <th scope="col">Active</th>
      <th scope="col">Edit</th>
      <th scope="col">Score</th>
    </tr>
    </thead>
    <tbody>
    <% @teams.each do |team| %>
      <%= render 'teams/row', team: team %>
    <% end %>
    </tbody>
  </table>
</div>
