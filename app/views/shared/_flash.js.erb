var messages = [];

<% flash.each do |msg_type, message| %>
messages.push(['<%= j bootstrap_class_for msg_type %>', '<%= message %>']);
<% end %>

$(document).on('turbolinks:load', function () {
    for (var i = 0; i < messages.length; i++) {
        console.log(messages[i][0]);
        $.notify({
            message: messages[i][1]
        }, {
            type: messages[i][0]
        });
    }
})
